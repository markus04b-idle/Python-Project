class Node:

    def __init__(self, data=None, next=None, prev=None):
        self.data = data
        self.next = next
        self.prev = prev

class DoubleLinkedList:

    def __init__(self):
        self.head = None
        self.tail = None
        self.size = 0

    def insert_at_beginning(self, data):
        new_node = Node(data, None, None)
        if self.head is None:
            self.head = new_node
            self.tail = self.head
        else:
            new_node.next = self.head
            self.head.prev = new_node
            self.head = new_node

        self.size = self.size + 1

    def append(self, data):
        new_node = Node(data, None, None)
        if self.head is None:
            self.head = new_node
            self.tail = self.head
        else:
            new_node.prev = self.tail
            self.tail.next = new_node
            self.tail = new_node

        self.size = self.size + 1

    def remove_by_value(self, data_to_remove):
        iterator = self.head
        node_deleted = False
        if self.head.data == data_to_remove:
            new_head = self.head.next
            new_head.prev = None
            self.head = new_head
            node_deleted = True
        elif self.tail.data == data_to_remove:
            new_tail = self.tail.prev
            new_tail.next = None
            self.tail = new_tail
            node_deleted = True
        else:
            while iterator:
                if iterator.data == data_to_remove:
                    prior_node = iterator.prev
                    next_node = iterator.next
                    prior_node.next = iterator.next
                    next_node.prev = iterator.prev

                iterator = iterator.next

        if node_deleted:
            self.size -= 1

    def print_list(self):
        if self.head is None:
            return "Linked list is empty"

        iterator = self.head
        linked_list_str = ""

        while iterator:
            linked_list_str += str(iterator.data) + "<-->"
            iterator = iterator.next

        return linked_list_str

def test_doublell():
    myList = DoubleLinkedList()
    print('Size', myList.size)
    myList.insert_at_beginning('orange')
    myList.insert_at_beginning('pear')
    myList.insert_at_beginning('apple')
    print('Size', myList.size)
    print('List contents:', myList.print_list())
    myList.append('mango')
    myList.append('banana')
    print('Size', myList.size)
    print('List contents:', myList.print_list())
    myList.remove_by_value('apple')
    myList.remove_by_value('orange')
    print('Size', myList.size)
    print('List contents:', myList.print_list())
    myList.remove_by_value('banana')
    print('Size', myList.size)
    print('List contents:', myList.print_list())

if __name__ == '__main__':
    test_doublell()
